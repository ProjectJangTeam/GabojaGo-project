<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.gabojago.dao.search.RecommendationSearchDao">
    
        <!-- recommendationList -->
    <select id="resultRecommendation" parameterType="String" resultType="hashMap">
        select
        r.*, f.*
        from
        jang_so_recommendation r join
        jang_so_review j
        on r.RECONO = j.RECONO
        left outer join
        jang_so_review_file f
        on j.PRVNO = f.PRVNO
        where
        r.ACT=true AND (
        
        <trim prefixOverrides="OR">
          <foreach item="keyword" collection="array">
              <trim prefix="OR">
                  r.TITLE LIKE CONCAT('%',#{keyword},'%')
              </trim>
          </foreach>
          )
        </trim>
        
        group by
        r.RECONO;
    </select>
</mapper>


